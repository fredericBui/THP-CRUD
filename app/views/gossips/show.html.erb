<h1>Gossip</h1>
<div class="card mx-auto my-3" style="width: 80%;">
    <div class="card-body">
        <h2 class="card-text"><%= @gossip.title %></h2>
        <p class="card-text"><%= @gossip.content %></p>
        <p> Auteur : <%= link_to "#{@gossip.user.firstName} #{@gossip.user.name}", controller: "profil", action: "show", id: @gossip.user.id %> </p>
        <p> Ville de l'auteur : <%= @gossip.user.city.name %></p>
    </div>
    <ul class="list-group">
        <% @comments.each do |comment| %>
            <li class="list-group-item">
                <b><%= comment.user.name %></b>
                <p><%= comment.content %></p>
                <a href="comments/<%= comment.id %>/edit">Edit</a>
            </li>
        <% end %>
    <ul> 
    <%= link_to "Edit", controller: "gossips", action: "edit" %>
    <%= button_to "delete", @gossip, :method => :delete %>

    <%= form_with url: "#{@gossip.id}/new", method: :post do |form| %>
        <%= form.label :content, "Comment :" %>
        <%= form.text_field :content %>
        <%= form.submit "Post" %>
    <% end %>
</div>

